.company-container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

.form-header {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 40rpx;
  text-align: center;
  color: white;
}

.header-title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.header-desc {
  font-size: 28rpx;
  opacity: 0.8;
}

.form-content {
  padding: 40rpx;
}

.form-item {
  margin-bottom: 40rpx;
}

.form-label {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.admin-info {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin: 40rpx 0;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.info-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.form-actions {
  margin: 60rpx 0 40rpx 0;
}

.form-tips {
  background: #fff3cd;
  border: 1rpx solid #ffeaa7;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-top: 40rpx;
}

.tips-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #856404;
  margin-bottom: 20rpx;
}

.tips-item {
  font-size: 26rpx;
  color: #856404;
  line-height: 1.6;
  margin-bottom: 10rpx;
} 