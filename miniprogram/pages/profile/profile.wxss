.profile-container {
  background-color: #f5f5f5;
  min-height: 100vh;
}

.user-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 40rpx;
  display: flex;
  align-items: center;
  color: white;
}

.user-avatar {
  margin-right: 30rpx;
}

.user-info {
  flex: 1;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.user-phone {
  font-size: 28rpx;
  opacity: 0.8;
  margin-bottom: 10rpx;
}

.user-role {
  font-size: 24rpx;
  background: rgba(255, 255, 255, 0.2);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  display: inline-block;
}

.section {
  margin-top: 20rpx;
  background: white;
}

.section-title {
  padding: 30rpx 30rpx 20rpx 30rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.logout-section {
  margin: 40rpx 30rpx;
}

.login-prompt {
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
  background-color: #f5f5f5;
}

.prompt-content {
  text-align: center;
  padding: 60rpx;
  background: white;
  border-radius: 20rpx;
  margin: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.prompt-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.prompt-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 40rpx;
} 